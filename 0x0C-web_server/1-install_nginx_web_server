#!/usr/bin/env bash
# a script that install nginx and configure it for ubuntu

sudo apt update
sudo apt install -y nginx
sudo sed -i 's/^.*listen.*$/    listen 80;/' /etc/nginx/sites-available/default
echo "<html><body><h1>Hello World!</h1></body></html>" | sudo tee /var/www/html/index.html > /dev/null
sudo service nginx restart
